<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    >
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="68dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"

    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rectangle"
        >
        <ImageView
            android:id="@+id/firstTeam"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <ImageView
            android:id="@+id/secondTeam"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toEndOf="@+id/firstTeam"
            app:layout_constraintTop_toTopOf="@id/firstTeam"
            app:layout_constraintBottom_toBottomOf="@id/firstTeam"
            />
        <TextView
            android:id="@+id/firstTeamNameItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="First Team"
            android:layout_marginStart="10dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/secondTeam"
            app:layout_constraintTop_toTopOf="@id/secondTeam"
            app:layout_constraintEnd_toStartOf="@+id/vs"
            />
        <TextView
            android:id="@+id/firstTeamPointItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="3"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/firstTeamNameItem"
            app:layout_constraintTop_toBottomOf="@id/firstTeamNameItem"
            app:layout_constraintEnd_toEndOf="@+id/firstTeamNameItem"
            />

        <TextView
            android:id="@+id/vs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="vs"
            android:layout_marginStart="10dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/firstTeamNameItem"
            app:layout_constraintTop_toTopOf="@id/firstTeamNameItem"
            app:layout_constraintEnd_toStartOf="@+id/secondTeamNameItem"
            />
        <TextView
            android:id="@+id/minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="-"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/firstTeamPointItem"
            app:layout_constraintTop_toTopOf="@+id/firstTeamPointItem"
            app:layout_constraintEnd_toStartOf="@+id/secondTeamPointItem"
            />
        <TextView
            android:id="@+id/secondTeamNameItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="First Team"
            android:layout_marginStart="10dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/vs"
            app:layout_constraintTop_toTopOf="@id/firstTeamNameItem"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <TextView
            android:id="@+id/secondTeamPointItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="3"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/secondTeamNameItem"
            app:layout_constraintTop_toBottomOf="@id/secondTeamNameItem"
            app:layout_constraintEnd_toEndOf="@+id/secondTeamNameItem"
            />




    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>